{
  "name": "Bigscreen",
  "version": "0.0.1",
  "main": "main_process/main.js",
  "license": "MIT",
  "author": "Anthony Cossins <anthony@signal-noise.co.uk>",
  "scripts": {
    "serve": "NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "node ./build/bin",
    "build:renderer": "cd ./renderer_process && npm run build:production",
    "lint": "eslint --ext .js ./main_process",
    "lint:fix": "eslint --fix .js ./main_process",
    "test": "npm run test:file -- main_process/**/*_spec.js build/**/*_spec.js",
    "test:file": "NODE_ENV=test electron-mocha",
    "test:watch": "npm run test -- --watch --watch-extensions js"
  },
  "dependencies": {
    "bunyan": "^1.8.10",
    "electron": "^1.6.2",
    "electron-settings": "^3.0.14",
    "electron-sudo": "^4.0.12",
    "js-yaml": "^3.8.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chance": "^1.0.8",
    "commander": "^2.9.0",
    "electron-mocha": "^3.4.0",
    "electron-packager": "^8.6.0",
    "eslint": "^3.18.0",
    "fs-extra": "^2.1.2",
    "merge-dirs": "^0.2.1",
    "mock-fs": "^4.2.0",
    "node-fs-extra": "^0.8.1",
    "proxyquire": "^1.7.11",
    "sinon": "^2.1.0"
  },
  "engines": {
    "node": ">=6.7.0"
  }
}
